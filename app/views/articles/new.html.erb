<h1> Create an article </h1>

<%= form_with model: @article do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	
	<br/>
	
	<%= f.label :author %>
	<%= f.text_field :author %>
	
	<br/>
	
	<%= f.label :content %>
	<%= f.text_area :content %>
	
	<% if f.object.errors[:content].present? %>
		<span>
		<%= f.object.errors[:content].to_sentence %>
		</span>
	<% end %>
	
	<br/>
	
	<%= f.submit %>
<% end %>

