<%= form_with model: @article do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	
	<br/>
	
	<%= f.label :author %>
	<%= f.text_field :author %>
	
	<% if f.object.errors[:author].present? %>
		<span>
			<%= f.object.errors[:author].to_sentence %>
		</span>
	<% end %>
	
	<br/>
	
	<%= f.label :content %>
	<%= f.text_area :content %>
	
	<% if f.object.errors[:content].present? %>
		<span>
		<%= f.object.errors[:content].to_sentence %>
		</span>
	<% end %>
	
	<br/>
	
	<%= f.submit %>
<% end %>

<%= link_to articles_path do %>
	Back to Index
<% end %>
